<h1>Listing accesses</h1>

<table>
  <tr>
    <th>Access name</th>
    <th>User editor</th>
    <th>Good editor</th>
    <th>Board editor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accesses.each do |access| %>
  <tr>
    <td><%= access.access_name %></td>
    <td><%= access.user_editor %></td>
    <td><%= access.good_editor %></td>
    <td><%= access.board_editor %></td>
    <td><%= link_to 'Show', access %></td>
    <td><%= link_to 'Edit', edit_access_path(access) %></td>
    <td><%= link_to 'Destroy', access, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

