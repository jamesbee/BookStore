<h1>Listing books</h1>

<table>
  <tr>
    <th>Onsale</th>
    <th>Book info</th>
    <th>Call number</th>
    <th>Catagory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= book.onsale %></td>
        <td><%= book.book_info %></td>
        <td><%= book.call_number %></td>
        <td><%= book.catagory_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

